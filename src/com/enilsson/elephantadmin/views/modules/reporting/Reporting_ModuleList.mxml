<?xml version="1.0" encoding="utf-8"?>
<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	verticalGap="0"
	paddingTop="0" paddingBottom="0" 
	horizontalScrollPolicy="off" 
	verticalScrollPolicy="off">
	
	<mx:Text 
		text="{data.title}" 
		width="{explicitWidth}" 
		styleName="listTitle" />
	<mx:Text 
		text="{data.description}" 
		width="{explicitWidth}" 
		styleName="listDesc" />

</mx:VBox>