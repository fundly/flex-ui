<?xml version="1.0" encoding="utf-8"?>
<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	height="65"
	verticalGap="0"
	paddingTop="0" paddingBottom="0" 
	horizontalScrollPolicy="off" 
	verticalScrollPolicy="off">

	<mx:Script>
		<![CDATA[
			[Bindable] private var _dateText:String = "";
			
			
			override public function set data( value : Object ) : void
			{
				super.data = value;
				
				if(value)
					formatDate();
			}
			private function formatDate():void
			{
				if(data.modified_on == 0)
				{
					_dateText = "";
				}
				else
					_dateText = df.format(new Date(data.modified_on * 1000));
			}
		]]>
	</mx:Script>

	<mx:DateFormatter id="df" formatString="MM/DD/YYYY LL:NNAA" />

	<mx:Text 
		text="{data.title}" 
		width="{explicitWidth}" 
		styleName="listTitle" />
	<mx:Text 
		text="{data.attachment_id.filename + ' ('+Math.ceil(data.filesize/1024)+' KB)'} - {data.publish == 1 ? 'Published' : 'Unpublished'}" 
		width="{explicitWidth}"
		styleName="listDesc" />
	<mx:Text 
		text="{_dateText}" 
		width="{explicitWidth}"
		styleName="listDesc" />

</mx:VBox>